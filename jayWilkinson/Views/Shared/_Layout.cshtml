@using Articulate;
@using Articulate.Models
@using ClientDependency.Core.Mvc
@inherits Umbraco.Web.Mvc.UmbracoViewPage<ListModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Document Settings -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Page Title -->
    <title>@Model.PageTitle</title>

    @Html.MetaTags(Model)
    @Html.SocialMetaTags(Model)
    @Html.AdvertiseWeblogApi(Model)
    @Html.RssFeed(Model)
    @Html.RenderOpenSearch(Model)

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700,700i%7cOswald:300,400,500,600,700%7cPlayfair+Display:400,400i,700,700i" rel="stylesheet">
    <!-- Styles -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/slick-theme.css">
    <link rel="stylesheet" href="~/assets/css/slick.css">
    <link rel="stylesheet" href="~/assets/css/style.css">

    <!-- HTML5 shim and Respond.js IE9 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="assets/js/html5shiv.js"></script>
    <script src="assets/js/respond.js"></script>
    <![endif]-->
</head>
<body class="marketing">
    <header class="kotha-menu marketing-menu">
        @Html.ThemedPartial(Model, "HeaderDescription")
        @Html.ThemedPartial(Model, "Menu")
    </header>
    @*@Html.Partial("~/Views/Shared/_Hero.cshtml")*@
    @*@Html.Partial("~/Views/Shared/_MultiHero.cshtml")*@

    <div class="kotha-default-content">
        <div class="container">
            <div class="row">
                <div class="col-sm-8">

                    @RenderBody()

                    @*@Html.Partial("~/Views/Shared/_PostNavigation.cshtml")*@
                </div>
                @Html.Partial("~/Views/Shared/_SidePanel.cshtml")
            </div>
        </div>
    </div>
    <!-- Renders the red banner above the footer-->
    @*Html.Partial("~/Views/Shared/_FullWidthBannerCTA.cshtml")*@

    <footer>
        <div class="container-fluid text-center ft-copyright">
            <p>
                <a href="https://episerver.com">I<i class="fa fa-heart"></i>Episerver</a> - &copy; @DateTime.Today.Year - <a href="">James "Jay" Wilkinson </a>
            </p>
        </div>
    </footer>

    <div class="scroll-up">
        <a href="#"><i class="fa fa-angle-up"></i></a>
    </div>
    <!--//Script//-->
    <script src="assets/js/jquery-1.12.4.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/slick.min.js"></script>
    <script src="assets/js/main.js"></script>

    @Html.RenderJsHere()

    @Html.GoogleAnalyticsTracking(Model)
</body>
</html>
