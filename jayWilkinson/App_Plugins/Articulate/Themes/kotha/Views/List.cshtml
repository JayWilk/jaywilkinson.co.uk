@using Articulate
@using Articulate.Models
@using ClientDependency.Core.Mvc
@using Umbraco.Core
@using Umbraco.Web
@using Umbraco.Web.Models
@model Articulate.Models.ListModel
@{
    Layout = "Master.cshtml";
}

@foreach (var post in Model.Posts)
{
    <article class="single-blog marketing-post">
        <div class="post-content">
            <div class="entry-header text-center">
                <a href="" class="post-cat  text-uppercase">@post.Categories.First().ToString()</a>
                <h2>
                    <a href="@post.Url">@post.Name.ToString()</a>
                </h2>
                <div class="post-meta">
                    <time datetime="@post.PublishedDate.ToString("yyyy-MM-dd")" hidden>
                        @post.PublishedDate.ToString("dddd, MMMM dd, yyyy")
                    </time>

                    <ul class="text-center list-inline author-meta">
                        <li class="date"> @post.PublishedDate.ToString("dddd, MMMM dd, yyyy")</li>
                    </ul>
                </div>
            </div>

            @if (post.PostImage != null)
            {
                var thumbnail = Url.GetCropUrl(post.PostImage, cropAlias: "blogPost", useCropDimensions: false, htmlEncode: false, upScale: false);
                if (thumbnail != null)
                {
                    <div class="post-thumb">
                        <a href="@post.Url"><img src="@thumbnail" alt="@post.Name"></a>
                    </div>
                }
            }

            <div class="entry-content">
                <p>
                    @post.Excerpt&hellip;
                </p>
            </div>
            <div class="continue-reading text-center text-uppercase">
                <a href="@post.Url">Read more <i class="fa fa-chevron-circle-right"></i></a>
            </div>
        </div>
    </article>
}